<h3>Update a project</h3>

<form action="/projects/update" method="POST">
    <input type="hidden" name="_id" value="<%= _id %>"/>
    <div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="name" name="name" value="<%= name %>">
            <label class="mdl-textfield__label" for="name">Name</label>
        </div>
    </div>
    <div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <textarea class="mdl-textfield__input" type="text" rows="3" id="description"
                name="description" value="<%= description %>"></textarea>
            <label class="mdl-textfield__label" for="description">Description</label>
        </div>
    </div>
    <a href="/projects" class="mdl-button mdl-js-button mdl-button--raised">
        Back
    </a>
    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
        Update
    </button>
</form>